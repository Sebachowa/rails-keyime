<div id="hero">
  <div class="header text-center">
    <h1>LET'S CHANGE THE WORLD<br>ONE SKILL AT A TIME</h1>
    <div class="search-form text-center">
      <%= form_tag(skills_path, method: :get, class: "form-inline") do %>
      <%= text_field_tag :search, nil, class: "form-control", id: "home-input" %>
      <%= submit_tag 'Search', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="title text-center">
    <h2>EXPLORE THE CATEGORIES</h2>
    <h4>Get inspired by KEYIMen</h4>
  </div>
  <div class="cards">
    <div class="container text-center">
      <div class="row top-buffer">
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Graphic design</p>
            <%= image_tag("graphic_design.jpg") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Digital Marketing</p>
            <%= image_tag("marketing.jpg") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Writing & Translation</p>
            <%= image_tag("writing.jpg") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Video Animation</p>
            <%= image_tag("animation.jpg") %>
          </div>
        </div>
      </div>
      <div class="row top-buffer">
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Music & Video</p>
            <%= image_tag("music.jpg") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Programming & Tech</p>
            <%= image_tag("coding.jpg") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Bussiness</p>
            <%= image_tag("bussiness.jpg") %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="card-container">
            <p>Fun & Lifestyle</p>
            <%= image_tag("fun.jpg") %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="separator">
    <div class="left-container text-center hidden-xs">
      <%= image_tag("illustration.svg") %>
    </div>
    <div class="right-container text-center">
      <h3>SUBSCRIBE NOW!</h3>
      <p>Learn more about all the cool new skills we have every week!</p>

      <!-- Begin MailChimp Signup Form -->
      <div id="mc_embed_signup">
        <form action="//herokuapp.us15.list-manage.com/subscribe/post?u=da7de0cd9a8fa3864e37f4b53&amp;id=1b18a305f5" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
          <div id="mc_embed_signup_scroll">
            <!--       <h2>Subscribe to our mailing list</h2> -->
            <!--     <div class="indicates-required"><span class="asterisk">*</span> indicates required</div> -->
            <div class="mc-field-group email-form-wrapper">
              <!--       <label for="mce-EMAIL">Email Address  <span class="asterisk">*</span> -->
            </label>
            <input type="email" value="" name="EMAIL" placeholder="Enter your email" class="required email email-signup" id="mce-EMAIL">
          </div>
          <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
          </div>
          <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
