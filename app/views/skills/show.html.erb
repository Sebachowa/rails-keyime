<div class="show-container">
  <div class="show-header">
    <div class="show-title">
      <h1><%= @skill.name.capitalize %></h1>
      <p><%= @skill.description.capitalize %></p>
    </div>
    <div class="show-profile-picture text-center">
      <% if @skill.user.facebook_picture_url %>
        <%= image_tag @skill.user.facebook_picture_url, class: "avatar-huge" %>
        <p><%= @skill.user.given_name.capitalize %> <%= @skill.user.family_name.capitalize %></p>
      <% else %>
        <%= image_tag "animation.jpg", class: "avatar-huge" %>
        <p><%= @skill.user.given_name.capitalize %> <%= @skill.user.family_name.capitalize %></p>
      <% end %>
    </div>
  </div>
  <div class="show-body">
    <div class="show-picture">
      <% @skill.photos.each do |photo| %>
        <%= cl_image_tag photo.path, width: 750, height: 450, crop: :fill %>
      <% end %>
    </div>
    <div class="show-info">
      <h4>$ <%= @skill.price %></h4>
      <h6>Location</h6>
      <p><%= image_tag "fill-1.svg", class: "marker" %><%= @skill.location %></p>
        <%= simple_form_for([@skill, @booking]) do |f| %>
          <%= f.error_notification %>

          <%= f.input :start_time %>
          <%= f.input :end_time %>

          <%= f.button :submit %>
        <% end %>
            <div class="form-group">
              <div class="input-group date">
                <input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
              </div>
            </div>
        </div>
      <div class="show-info-buttons">
        <%= link_to t(".top_call_to_action", default: "Book!"), new_user_session_path, class: "btn-book btn btn-success" %>
        <div class="show-info-buttons-bottom">
          <%= link_to t(".top_call_to_action", default: "Contact"), new_user_session_path, class: "btn-contact btn btn-success" %>
          <%= link_to t(".top_call_to_action", default: "Share"), new_user_session_path, class: "btn-share btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>





