<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <div class="show-title">
          <h1><%= @skill.name.capitalize %></h1>
          <p>Posted time: <%= @skill.created_at %></p>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="show-user text-center">
          <% if @skill.user.facebook_picture_url %>
          <%= image_tag @skill.user.facebook_picture_url, class: "avatar-huge" %>
          <p><%= @skill.user.given_name %> <%= @skill.user.family_name %></p>
          <% else %>
          <%= image_tag "profile.svg", class: "avatar-huge" %>
          <p><%= @skill.user.given_name %> <%= @skill.user.family_name %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row top-buffer">
       <%= render "shared/carousel" %>
      <div class="col-xs-4">
        <div class="show-details">
          <h4>$ <%= @skill.price %></h4>
          <h6>Location</h6>
          <p><%= image_tag "fill-1.svg", class: "marker" %> <%= @skill.location %></p>
          <%= simple_form_for([@skill, @booking]) do |f| %>
          <%= f.error_notification %>
            <%= f.input :start_time, as: :date_time_picker %>
            <%= f.input :end_time, as: :date_time_picker %>
            <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
